<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:id="@+id/gamburgerButton"
        android:onClick="gamburgerClick"
        android:background="@drawable/gamburger"
        android:layout_gravity="left|top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/brutal"
        android:singleLine="true"
        android:gravity="center"
        android:textSize="60sp"
        android:id="@+id/brutalText"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/gamburgerButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/gamburgerButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="vkLoginClick"
        android:id="@+id/button3"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/brutalText"
        android:layout_alignEnd="@+id/brutalText"
        android:background="@drawable/vk" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/hust_login"
        android:onClick="vkLoginClick"
        android:textSize="40sp"
        android:gravity="center"
        android:id="@+id/textView12"
        android:layout_below="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/brutalText"
        android:layout_alignEnd="@+id/brutalText" />

</RelativeLayout>